    icon: '‚öôÔ∏è',
    skills: ['PowerShell', 'Docker', 'Git', 'Postman', 'Trello', 'Azure Pricing Calculator'],
  },
  {
    category: 'Frontend',
    icon: 'üé®',
    skills: ['HTML', 'CSS', 'Tailwind CSS', 'JavaScript', 'TypeScript', 'Angular'],
  },
  {
    category: 'Backend & Databases',
    icon: 'üóÑÔ∏è',
    skills: ['Node.js', 'Express.js', 'Java', 'Spring', 'PostgreSQL', 'MySQL'],
  },
  {
    category: 'Azure Services',
    icon: 'üî∑',
    skills: ['Web Apps', 'App Service Plans', 'SQL Server', 'MySQL Flexible Server', 'Function Apps', 'API Management'],
  },
];

const softSkillCategories = [
  {
    categoryKey: 'soft.collab' as const,
    icon: 'ü§ù',
    skills: ['soft.teamwork' as const, 'soft.communication' as const, 'soft.negotiation' as const],
  },
  {
    categoryKey: 'soft.cognitive' as const,
    icon: 'üß†',
    skills: ['soft.critical' as const, 'soft.adaptability' as const],
  },
  {
