---

<section id="skills" class="relative py-20 lg:py-28">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section header -->
    <div class="text-center mb-16">
      <h2 class="text-4xl sm:text-5xl font-bold mb-4">
        <span class="bg-gradient-to-r from-primary-600 to-accent-500 bg-clip-text text-transparent">
          {t('skills.title')}
        </span>
      </h2>
    </div>

    <!-- Technical Skills -->
    <div class="mb-12">
      <h3 class="text-2xl font-bold mb-8 text-center text-slate-700 dark:text-slate-200">
        {t('skills.technical')}
      </h3>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
        {technicalSkills.map((category) => (
          <div class="p-5 rounded-2xl bg-white/60 dark:bg-slate-800/60 backdrop-blur-md border border-slate-200/50 dark:border-slate-700/50 shadow-lg hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
            <div class="flex items-center gap-3 mb-4">
              <span class="text-2xl">{category.icon}</span>
              <h4 class="font-bold text-slate-800 dark:text-slate-100 text-sm">{category.category}</h4>
            </div>
            <div class="flex flex-wrap gap-1.5">
              {category.skills.map((skill) => (
                <span class="px-2.5 py-1 text-xs font-medium rounded-lg bg-primary-50 dark:bg-primary-900/20 text-primary-700 dark:text-primary-300 border border-primary-100 dark:border-primary-800/30 hover:bg-primary-100 dark:hover:bg-primary-900/40 transition-colors">
                  {skill}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Soft Skills -->
    <div class="mb-12">
      <h3 class="text-2xl font-bold mb-8 text-center text-slate-700 dark:text-slate-200">
        {t('skills.soft')}
      </h3>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
        {softSkillCategories.map((cat) => (
          <div class="p-5 rounded-2xl bg-white/60 dark:bg-slate-800/60 backdrop-blur-md border border-slate-200/50 dark:border-slate-700/50 shadow-lg hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
            <div class="flex items-center gap-3 mb-4">
              <span class="text-2xl">{cat.icon}</span>
              <h4 class="font-bold text-slate-800 dark:text-slate-100 text-sm">{t(cat.categoryKey)}</h4>
            </div>
            <div class="flex flex-wrap gap-1.5">
              {cat.skills.map((skillKey) => (
                <span class="px-2.5 py-1 text-xs font-medium rounded-lg bg-primary-50 dark:bg-primary-900/20 text-primary-700 dark:text-primary-300 border border-primary-100 dark:border-primary-800/30 hover:bg-primary-100 dark:hover:bg-primary-900/40 transition-colors">
                  {t(skillKey)}
                </span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Languages -->
    <div>
      <h3 class="text-2xl font-bold mb-8 text-center text-slate-700 dark:text-slate-200">
        {t('skills.languages')}
      </h3>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
        <div class="p-5 rounded-2xl bg-white/60 dark:bg-slate-800/60 backdrop-blur-md border border-slate-200/50 dark:border-slate-700/50 shadow-lg hover:shadow-xl hover:-translate-y-1 transition-all duration-300">
          <div class="flex items-center gap-3 mb-4">
            <span class="text-2xl">{languageCategory.icon}</span>
            <h4 class="font-bold text-slate-800 dark:text-slate-100 text-sm">{t(languageCategory.categoryKey)}</h4>
          </div>
          <div class="flex flex-wrap gap-1.5">
            {languageCategory.skills.map((skillKey) => (
              <span class="px-2.5 py-1 text-xs font-medium rounded-lg bg-primary-50 dark:bg-primary-900/20 text-primary-700 dark:text-primary-300 border border-primary-100 dark:border-primary-800/30 hover:bg-primary-100 dark:hover:bg-primary-900/40 transition-colors">
                {t(skillKey)}
              </span>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
