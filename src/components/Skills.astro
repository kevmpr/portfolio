  {
    category: 'Cloud & Infrastructure',
    icon: '‚òÅÔ∏è',
    skills: ['Microsoft Azure', 'AWS', 'Azure Virtual Machines', 'VNets & NSG', 'Azure Migrate', 'Private Endpoints', 'DNS', 'Application Gateway'],
  },
  {
    category: 'Networking & Security',
    icon: 'üîí',
    skills: ['Azure Networking', 'AZ-700', 'RBAC', 'Azure Advisor', 'Azure Resource Graph', 'FinOps'],
  },
  {
