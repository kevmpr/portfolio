    icon: '‚òÅÔ∏è',
    skills: ['Microsoft Azure', 'AWS', 'Azure Virtual Machines', 'VNets & NSG', 'Azure Migrate', 'Private Endpoints', 'DNS', 'Application Gateway'],
  },
  {
