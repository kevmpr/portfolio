---
interface Props {
  title: string;
  challenge: string;
  solution: string;
  tech: string[];
  icon: string;
  challengeLabel: string;
  solutionLabel: string;
  stackLabel: string;
}

const { title, challenge, solution, tech, icon, challengeLabel, solutionLabel, stackLabel } = Astro.props;

const icons: Record<string, { viewBox: string; path: string }> = {
  shield: {
    viewBox: '0 0 24 24',
    path: 'M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z',
  },
  search: {
    viewBox: '0 0 24 24',
    path: 'M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z',
  },
  migrate: {
    viewBox: '0 0 24 24',
    path: 'M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4',
  },
  cost: {
    viewBox: '0 0 24 24',
    path: 'M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
  },
  document: {
    viewBox: '0 0 24 24',
    path: 'M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z',
  },
};

const selectedIcon = icons[icon] || icons.shield;
---

<div class="group relative p-[1px] rounded-2xl bg-gradient-to-br from-slate-200 to-slate-300 dark:from-slate-700 dark:to-slate-800 hover:from-primary-400 hover:to-accent-400 transition-all duration-500">
  <div class="bg-white/80 dark:bg-slate-800/80 backdrop-blur-md rounded-2xl p-6 h-full flex flex-col hover:-translate-y-2 transition-all duration-300 shadow-lg hover:shadow-2xl">
    <!-- Header -->
    <div class="flex items-start gap-3 mb-5">
      <div class="w-11 h-11 rounded-xl bg-gradient-to-br from-primary-500 to-accent-500 flex items-center justify-center flex-shrink-0">
        <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox={selectedIcon.viewBox}>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={selectedIcon.path}></path>
        </svg>
      </div>
      <h3 class="text-lg font-bold text-slate-800 dark:text-slate-100 leading-snug pt-1">{title}</h3>
    </div>

    <!-- Challenge -->
    <div class="mb-4">
      <div class="flex items-center gap-2 mb-1.5">
        <span class="w-1.5 h-1.5 rounded-full bg-amber-500 flex-shrink-0"></span>
        <span class="text-xs font-semibold text-amber-600 dark:text-amber-400 uppercase tracking-wider">{challengeLabel}</span>
      </div>
      <p class="text-slate-600 dark:text-slate-300 text-sm leading-relaxed pl-3.5 border-l-2 border-amber-400/40 dark:border-amber-500/30">{challenge}</p>
    </div>

    <!-- Solution -->
    <div class="mb-5 flex-grow">
      <div class="flex items-center gap-2 mb-1.5">
        <span class="w-1.5 h-1.5 rounded-full bg-emerald-500 flex-shrink-0"></span>
        <span class="text-xs font-semibold text-emerald-600 dark:text-emerald-400 uppercase tracking-wider">{solutionLabel}</span>
      </div>
      <p class="text-slate-600 dark:text-slate-300 text-sm leading-relaxed pl-3.5 border-l-2 border-emerald-400/40 dark:border-emerald-500/30">{solution}</p>
    </div>

    <!-- Tech badges -->
    <div>
      <span class="text-xs font-semibold text-slate-500 dark:text-slate-400 uppercase tracking-wider">{stackLabel}</span>
      <div class="flex flex-wrap gap-1.5 mt-2">
        {tech.map((t) => (
          <span class="px-2.5 py-1 text-xs font-medium rounded-lg bg-primary-50 dark:bg-primary-900/20 text-primary-700 dark:text-primary-300 border border-primary-100 dark:border-primary-800/30">
            {t}
          </span>
        ))}
      </div>
    </div>
  </div>
</div>
